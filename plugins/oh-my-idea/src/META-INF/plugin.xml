<idea-plugin>
  <id>com.intellij.ohmyidea</id>
  <name>oh-my-idea</name>
  <description>IDEA KeyMap helper for Programming quickly</description>
  <version>1.0.0</version>
  <vendor url="http://codecode.fun">vsmysee</vendor>


  <application-components>
    <component>
      <implementation-class>com.intellij.ide.actions.App</implementation-class>
    </component>
  </application-components>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="ChinaPoem" anchor="right" factoryClass="com.intellij.ide.actions.poem.PoemToolWindowFactory"/>
  </extensions>

  <actions>
    <action id="POEM_BACK" class="com.intellij.ide.actions.poem.BackAction" icon="/icons/prev.png">
      <keyboard-shortcut first-keystroke="alt 7" keymap="$default"/>
    </action>
    <action id="POEM_FORWARD" class="com.intellij.ide.actions.poem.ForwardAction" icon="/icons/next.png">
      <keyboard-shortcut first-keystroke="alt 8" keymap="$default"/>
    </action>
    <action id="ShowSelectActions" class="com.intellij.ide.actions.ActionPop"/>
  </actions>

</idea-plugin>
